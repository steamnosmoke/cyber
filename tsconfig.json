{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "store/*": ["src/app/store/*"],
      "hooks/*": ["src/app/hooks/*"],
      "types/*": ["src/app/types/*"],
      "utils/*": ["src/app/utils/*"],

      "pages/*": ["src/pages/*"],
      "features/*": ["src/features/*"],

      "assets/*": ["src/shared/assets/*"],
      "images/*": ["src/shared/assets/images/*"],
      "constants/*": ["src/shared/constants/*"],
      "components/*": ["src/shared/components/*"],

      "buttons/*": ["src/shared/components/buttons/*"]
    }
  },
  "include": ["src"]
}
